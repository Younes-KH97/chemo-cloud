<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="module_category_cac" model="ir.module.category">
            <field name="name">Cac</field>
        </record>


        <!-- Doctor Group -->
        <record id="group_doctor" model="res.groups">
            <field name="name">Doctor</field>
            <field name="category_id" ref="cancer_center.module_category_cac"/>
        </record>

        <!-- Nurse Group -->
        <record id="group_nurse" model="res.groups">
            <field name="name">Nurse</field>
            <field name="category_id" ref="cancer_center.module_category_cac"/>
        </record>

        <!-- Pharmacist Group -->
        <record id="group_pharmacist" model="res.groups">
            <field name="name">Pharmacist</field>
            <field name="category_id" ref="cancer_center.module_category_cac"/>
        </record>

        <!-- Patient Group (optional, for portal-like access or admin view only) -->
        <record id="group_patient" model="res.groups">
            <field name="name">Patient</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

    </data>
</odoo>
